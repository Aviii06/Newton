{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/local/bin/g++",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-Wall",
				"-g",
				"-I${workspaceFolder}/dependancies/include",
				"-I${workspaceFolder}/common",
				"-I${workspaceFolder}/utils",
				"-I${workspaceFolder}/src",
				"-I${workspaceFolder}/src/stb_image",
				"-L${workspaceFolder}/dependancies/library",
				"${workspaceFolder}/dependancies/library/libglfw.3.3.dylib",
				"${workspaceFolder}/dependancies/library/libGLEW.2.2.0.dylib",
				"-o",
				"${workspaceFolder}/newton",
				"${workspaceFolder}/src/**.cpp",
				"${workspaceFolder}/src/stb_image/**.cpp",
				"${workspaceFolder}/utils/*.cpp",
				"${workspaceFolder}/main.cpp",
				"-framework",
				"OpenGl",
				"-framework",
				"Cocoa",
				"-framework",
				"IOKit",
				"-framework",
				"CoreVideo",
				"-framework",
				"CoreFoundation",
				"-framework",
				"GLUT",
				"-Wno-deprecated"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}